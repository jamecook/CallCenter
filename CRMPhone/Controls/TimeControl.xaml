<UserControl x:Class="CRMPhone.Controls.TimeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="100">
    <Border BorderBrush="LightBlue" BorderThickness="1" Margin="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="5" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="ComboHours" DisplayMemberPath="Name" SelectedValuePath="Hour" HorizontalAlignment="Center" VerticalAlignment="Center" SelectionChanged="Combo_OnSelectionChanged"/>
            <TextBlock Text=":" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <ComboBox Grid.Column="2" x:Name="ComboMinutes" DisplayMemberPath="Name" SelectedValuePath="Minute" HorizontalAlignment="Center" VerticalAlignment="Center" SelectionChanged="Combo_OnSelectionChanged"/>
        </Grid>
    </Border>
</UserControl>
